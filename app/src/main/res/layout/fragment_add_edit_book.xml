<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="addEditItemViewModel"
            type="com.example.bookshelfhelper.AddEditBookViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="AddEditBookFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/addTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:text="@={addEditItemViewModel.inputTitle}"
                android:inputType="text"
                android:padding="15dp" />

            <EditText
                android:id="@+id/addAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Author"
                android:text="@={addEditItemViewModel.inputAuthor}"
                android:inputType="text"
                android:padding="15dp" />

            <EditText
                android:id="@+id/addPublisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Publisher"
                android:text="@={addEditItemViewModel.inputPublisher}"
                android:inputType="text"
                android:padding="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/ic_add"
            android:text="@={addEditItemViewModel.addOrEditButtonText}"
            android:onClick="@{()->addEditItemViewModel.saveOrUpdate()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>